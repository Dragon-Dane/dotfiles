[alias]
	ci = commit -m
  ca = commit add --all && git commit -m
	a  = commit --amend
	am = commit --amend --all
	s  = status
	pf = push --force
	pu = push
	l  = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	lc = log -1 --stat
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	uc = reset HEAD~
	rh = reset --hard
	co = checkout
	df = diff --color --color-words --abbrev
	cp = cherry-pick
	d  = difftool
	ru = rebase-update
	b  = branch
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes
	precomposeUnicode = true
[rebase]
	autosquash = true
[push]
	default = current
[pull]
	default = current
